<div class="card">
    <div class="card-header">
        <h4><a class="link" href="/post{{id}}">{{title}}</a></h4>
        <p>By {{user.username}} on {{format_date created_at}}</p>
    </div>
    <p class="card-body">{{content}}</p>
</div>

{{#if loggedIn}}
<div class="card">
    <h3 class="card-header"></h3>
    <form class="card-body comment-form" id="comment-form">
        <label for="comment" class="label">Comment</label>
        <input id="comment" name="comment-body" class="form-input"/>

        <button type="submit" class="button">Submit</button>
    </form>
</div>
{{/if}}

<div class="comments">
    {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <div class="card-body">
            <div class="content">
                {{comment_text}}
            </div>
            <div class="comment-creator">
                {{user.username}}, {{format_date date_created}}
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}