<article class="post">
    {{#each posts as |post|}}
    <div class="card">
        <div class="card-header">
            <h3><a class="link" href="/post/{{post.id}}">{{title}}</a></h3>
            <p>Created by: {{user.username}} on {{format_date createdAt}}</p>
        </div>
        <p class="card-content">{{content}}</p>
    </div>
    {{/each}}
</article>

